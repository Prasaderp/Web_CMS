# Backend API Configuration - PRODUCTION
# Copy this file to .env and fill in your production values

# ============================================
# REQUIRED - Application will not start without these
# ============================================

# Secret key for JWT tokens (minimum 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=YOUR_PRODUCTION_SECRET_KEY_HERE

# Neon PostgreSQL Database connection with SSL
# Format: postgresql://username:password@host/database?sslmode=require&channel_binding=require
DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@ep-xxxxx-xxxxx.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# CORS allowed origins (comma-separated, NO WILDCARDS)
# Add your production frontend URLs here
CORS_ORIGINS=https://your-cms.onrender.com,https://your-website.onrender.com

# Cloudinary (for media uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# OPTIONAL - Defaults provided
# ============================================

# Redis cache (optional - app works without it)
# REDIS_URL=redis://your-redis-url:6379/0

# Debug mode (MUST be false in production!)
DEBUG=false

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# Cache TTL in seconds
CACHE_TTL=300

# Default Admin (created on first startup if no users exist)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=YOUR_SECURE_ADMIN_PASSWORD
